$(document).ready(function (){

    function initialize() {
    	var myLatLng = new google.maps.LatLng(34.083308, -84.627842);
    	var image = "<%= asset_path 'map_icon.png' %>"
      var mapOptions = {
	      center: myLatLng,
	      zoom: 16,
	      scrollwheel: false
	    };
        
      var map = new google.maps.Map(document.getElementById('map-canvas'),
                mapOptions); 
			var marker = new google.maps.Marker({
		    position: myLatLng,
		    map: map,
		    title:"Hello World!",
		    icon: image
			});   
    }
      
    google.maps.event.addDomListener(window, 'load', initialize);
});
